# Ejecutable
NAME = so_long

# Directorios de librerÃ­as
GNL_DIR = ./libs/gnl
PRINTF_DIR = ./libs/ft_printf
MLX_DIR = ./libs/mlx
LIBFT_DIR = ./libs/libft

# Libs
GNL_LIB = $(GNL_DIR)/libgnl.a
PRINTF_LIB = $(PRINTF_DIR)/libftprintf.a
MLX_LIB = $(MLX_DIR)/libmlx.a
LIBFT_LIB = $(LIBFT_DIR)/libft.a

# Fuentes propias
SRCS = 	main.c \
		./utils/game/game_utils.c \
		./utils/player/player_utils.c \
		./utils/map/map_utils.c \
		./utils/error/error_utils.c \
		./utils/mlx/mlx_utils.c \
		./utils/input/input_utils.c \

OBJS = $(SRCS:.c=.o)

# Compilador
CC = gcc
CFLAGS = -Wall -Wextra -Werror

# MiniLibX flags
MLX_FLAGS = -I$(MLX_DIR) -L$(MLX_DIR) -lmlx -framework OpenGL -framework AppKit

# Regla principal
all: $(MLX_LIB) $(GNL_LIB) $(PRINTF_LIB) $(LIBFT_LIB) $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) $(GNL_LIB) $(PRINTF_LIB) $(LIBFT_LIB) $(MLX_FLAGS) -o $(NAME)

# Compilar libs
$(MLX_LIB):
	make -C $(MLX_DIR)

$(LIBFT_LIB):
	make -C $(LIBFT_DIR)

$(GNL_LIB):
	make -C $(GNL_DIR)

$(PRINTF_LIB):
	make -C $(PRINTF_DIR)

# .c -> .o
%.o: %.c
	$(CC) $(CFLAGS) -I$(MLX_DIR) -Iincludes -I$(GNL_DIR) -I$(PRINTF_DIR) -c $< -o $@

clean:
	make clean -C $(MLX_DIR)
	make clean -C $(GNL_DIR)
	make clean -C $(PRINTF_DIR)
	rm -f $(OBJS)

fclean: clean
	make clean -C $(MLX_DIR)
	make clean -C $(GNL_DIR)
	make clean -C $(PRINTF_DIR)
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re